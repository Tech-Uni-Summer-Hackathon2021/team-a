.top{
  background-image: url("<%= asset_path('HeroPage.png') %>");
  background-size: cover;
  background-position: center center;
  height: 1000px;
  width: 100%
}
toptext {
  color: black;
  font-size: 5vw;
  font-weight: bold;
}
.toptext2{
  padding-top: 500px;
}
.redcolor{
  background-color: #fd99a1;
}
.maincon{
  margin: 20px;
}
.flex{
  text-align: center;
  justify-content: center;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.Number {
  font-size: 6rem;
  font-weight: bold;
  color: #00000010;
  float: left;
  position: absolute;
  left: 8px;
  top: 0;
  line-height: 1;
  z-index: 3;
}
.Number4 {
  font-size: 6rem;
  font-weight: bold;
  color: #ebb94d;
  float: left;
  position: absolute;
  left: 8px;
  top: 0;
  line-height: 1;
  z-index: 3;
}
.title {
  color: black;
  font-size: 2vw;
  font-weight: bold;
  padding: 25px;
}
.img_preview{
  text-align: end;
  background-size: contain;
  max-height: 250px;
}
.flex img{
  height:70%;
  width: 70%;
}
.btn {
  color: #ebb94d;
  border-radius: 18px;
  -moz-border-radius: 5px;
}